<div class="dashboard main">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 activity-form">
        <!--form class="row"-->
<!--           <div class="form-group col-sm-3">
            <select class="form-control">
              <% @projects.each do |project| %>
                <option><%= project.name %></option>
              <% end %>
            </select>
          </div> -->
          <%= form_for(@task) do |f| %>

            <div class="form-group col-sm-3">
              <%= f.select :project_id, @projects.map{ |p| [p.name, p.id] }, {}, class: "form-control" %>
            </div>

            <div class="form-group col-sm-8">
              <%= f.text_field :description, class: "form-control", placeholder: "¿En qué estás trabajando?" %>
              <!--input class="form-control" placeholder="¿En qué estás trabajando?" type="text" /-->
            </div>
            <div class="col-sm-1">
              <%= f.submit "Start", class: "btn btn-success", method: "create" %>
              <!--input class="btn btn-success" type="submit" value="Start" /-->
            </div>
          <% end %>
        <!--/form-->
      </div>
    </div>

    <div class="row">
      <table class="table activities-list">
        <thead>
          <tr>
            <th>Project</th>
            <th>Description</th>
            <th class="text-center">Time</th>
          </tr>
        </thead>
        <tbody>
          <% @tasks.each do |task| %>
            <tr>
              <td><%= task.project.name if task.project %></td>
              <td><%= task.description %></td>
              <td><%= task.time %></td>
              
            </tr>
          <% end %>

          
<!--           <tr>
            <td>Make it Real</td>
            <td>Reunión</td>
            <td class="text-center">800 segundos</td>
          </tr> -->
        </tbody>
      </table>
    </div>
  </div>
</div>
  
